<h1>Beers By Rating</h1>
  <ol>
<% @beers.each do |beer| %>
    <li><h3><%= beer.brewery.name %> <%= beer.name %></h3>
  <div>
    <p><%= beer.style %> - <%= beer.ABV %></p>
  </div>
    <%= link_to "Rate Beer", new_beer_rating_path(beer.id)%>
    <%= link_to "Edit Beer", edit_beer_path(beer)%>
<% end %>
</ol>